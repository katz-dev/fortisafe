{
    "name": "Fortisafe",
    "version": "1.0",
    "description": "A secure password manager and credential storage extension",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "contextMenus",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:8080/*",
        "https://*.auth0.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "cross_origin_opener_policy": {
        "value": "unsafe-none"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src http://localhost:8080/ https://*.auth0.com/; frame-src http://localhost:8080/ https://*.auth0.com/"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "auth-success.html",
                "popup.html",
                "login.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}